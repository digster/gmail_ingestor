# Gmail Ingestor Configuration
# Copy this file to .env and fill in your values

# Path to OAuth 2.0 client credentials JSON (downloaded from Google Cloud Console)
GMAIL_CREDENTIALS_PATH=credentials/client_secret.json

# Path to store the OAuth token after authentication
GMAIL_TOKEN_PATH=credentials/token.json

# Gmail label to fetch emails from (default: INBOX)
GMAIL_LABEL=INBOX

# Maximum results per API page (1-500, default: 100)
GMAIL_MAX_RESULTS_PER_PAGE=100

# Batch size for fetching full message bodies (1-100, default: 50)
GMAIL_BATCH_SIZE=50

# Output directories
GMAIL_OUTPUT_MARKDOWN_DIR=output/markdown
GMAIL_OUTPUT_RAW_DIR=output/raw

# SQLite database path
GMAIL_DATABASE_PATH=data/gmail_ingestor.db

# Rate limiting & retry
GMAIL_MAX_RETRIES=5
GMAIL_INITIAL_BACKOFF_SECONDS=1.0
GMAIL_MAX_BACKOFF_SECONDS=60.0
GMAIL_INTER_BATCH_DELAY_SECONDS=1.0
GMAIL_INTER_PAGE_DELAY_SECONDS=0.2
GMAIL_NUM_RETRIES=3

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
GMAIL_LOG_LEVEL=INFO
