# Gmail Ingester Configuration
# Copy this file to .env and fill in your values

# Path to OAuth 2.0 client credentials JSON (downloaded from Google Cloud Console)
GMAIL_CREDENTIALS_PATH=credentials/client_secret.json

# Path to store the OAuth token after authentication
GMAIL_TOKEN_PATH=credentials/token.json

# Gmail label to fetch emails from (default: INBOX)
GMAIL_LABEL=INBOX

# Maximum results per API page (1-500, default: 100)
GMAIL_MAX_RESULTS_PER_PAGE=100

# Batch size for fetching full message bodies (1-100, default: 50)
GMAIL_BATCH_SIZE=50

# Output directories
OUTPUT_MARKDOWN_DIR=output/markdown
OUTPUT_RAW_DIR=output/raw

# SQLite database path
DATABASE_PATH=data/gmail_ingester.db

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
